# frozen_string_literal: true

source "https://rubygems.org"

# Add the GitHub Pages gem
gem "github-pages", group: :jekyll_plugins

# Add Jekyll plugins
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-sitemap"
  gem "jekyll-paginate"
  gem "jekyll-seo-tag"
end

# Add gems for local development
group :development do
  gem "webrick"
  gem "appraisal" # Move appraisal to development group
end

# Comment out the gemspec line if you don't have a .gemspec file
# gemspec

